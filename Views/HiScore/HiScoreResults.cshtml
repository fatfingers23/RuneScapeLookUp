@model RuneScapeLookUp.ViewModels.LookUp.LookUpResultViewModel
@{
    ViewData["Title"] = $"{Model.Game}-{Model.Username}";
}
<div class=" d-flex justify-content-center pt-4">
    <div class="row col-lg-8 jumbotron justify-content-center">
        <h3>@Model.Username</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Skill</th>
                    <th scope="col">Rank</th>
                    <th scope="col">Level</th>
                    <th scope="col">Experince</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.SkillHSData)
                {
                    <tr>
                        <th scope="row"><img src="~/img/SkillIcons/@(item.SkillName)_icon.png" /> @item.SkillName</th>
                        <td>@String.Format("{0:n0}", item.Rank)</td>
                        <td>@String.Format("{0:n0}", item.Level)</td>
                        <td>@String.Format("{0:n0}", item.Experience)</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="row justify-content-center">
        
        
    </div>
    


</div>